pipeline{

	agent any

	environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub-yag')
	}

	stages {

		stage('Build') {

			steps {
				sh 'docker build -t website8:v1 .'
			}
		}

		stage('Login') {

			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

		stage('Push') {

			steps {
				sh 'docker push website8:v1'
			}
		}
	}

	post {
		always {
			sh 'docker logout'
		}
	}

}
